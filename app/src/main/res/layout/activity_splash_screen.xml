<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Input fields for each day -->
    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="652dp"
        android:layout_above="@id/btnCalc"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtMonday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monday" />

        <EditText
            android:id="@+id/edtTuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tuesday" />

        <EditText
            android:id="@+id/edtWednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wednesday" />

        <EditText
            android:id="@+id/edtThursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thursday" />

        <EditText
            android:id="@+id/edtFriday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friday" />

        <EditText
            android:id="@+id/edtSaturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Saturday" />

        <EditText
            android:id="@+id/edtSunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sunday" />

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Calculate " />
    </LinearLayout>

    <!-- Calculate Average Button -->

    <!-- Navigation and Exit Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_above="@id/btnCalc"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnExit2"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Exit" />

        <Button
            android:id="@+id/btnNext2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>

</RelativeLayout>


